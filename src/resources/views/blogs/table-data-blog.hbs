

<div class="app-title">
            <ul class="app-breadcrumb breadcrumb side">
                <li class="breadcrumb-item active"><a href="#"><b>Danh sách bài viết </b></a></li>
            </ul>
            <div id="clock"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="tile-body">
                        <div class="row element-button">
                            <div class="col-sm-2">
                              <a class="btn btn-add btn-sm" href="/admin/blogs/add-blog" title="insert"><i class="fas fa-plus"></i>
                                Tạo mới bài viết</a>
                            </div>  
                            <div class="col-md-9 col-sm-8 col-xs-12 blogs-main--detail">
                            </div>           
                        </div>
                            <div class="listBlogs-content">
                                    {{#each blogs}}
                                    <div class="list-article-content blog-posts">
                                        <article class="article-loop  article_loopfirst ">
                                            <div class="article-inner">
                                                <div class="article-image">
                                                    <a href="">
                                                        <img class="lazyloaded" src="/upload/{{this.img}}" alt="width=100px;">
                                                    </a>
                                                  </div>
                                                <div class="article-detail">
                                                    <div class="article-title">
                                                        <h3>{{this.title}}</h3>
                                                    </div>
                                                    <p class="content">{{this.content}}</p>
                                                    <div class="article-post-meta">
                                                        <span class="author">bởi:{{this.author}}</span>
                                                    </div>
                                                </div>
                                                <div class="deleteupdate">
                                                <a href="/admin/blogs/delete?id={{this.id}}" style="width:30px;height=20px" class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                                onclick="myFunction(this)"><i class="fas fa-trash-alt"></i><form method="post" action="/admin/blogs/delete?id={{this.id}}&_method=DELETE" ><input type="submit"></form></a>
                                                <a href="/admin/blogs/update?id={{this.id}}" class="btn btn-primary btn-sm edit" type="button" title="Sửa" id="show-emp" data-toggle="modal"
                                                data-target="#ModalUP"><i class="fas fa-edit"></i></a>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                {{/each}}
                            </div>
                    </div>
                </div>
            </div>

<style>
    .deleteupdate{
        width: 5%;
    }
    a.btn.btn-primary.btn-sm.trash {
        height: 25px;
    }   
    input[type="submit"] {
    margin: -20px;
    opacity: 0;
    }
    .article-image{
        width: 32%;
    }
    .article-detail{
        padding-left:3% ;
        width: 59%;
        padding-right: 2%;
    }
    .lazyloaded{
        width: 100%;
    }
    .article-loop .article-inner {
    background: #ffffff;
    padding: 20px 0;
    border-top: 1px solid #ebecf0;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-align-items: center;
    -ms-align-items: center;
    align-items: center;
}
</style>
                            
