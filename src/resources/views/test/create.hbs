<form method="POST" action="/test/store">
  <div class="mb-3">
    <label for="name" class="form-label">Họ: </label>
    <input name="firstName" type="text" class="form-control" id="name" />
  </div>
  <div class="mb-3">
    <label for="lastname" class="form-label">Tên:</label>
    <input type="text" name="lastName" class="form-control" id="lastname" />
  </div>
  <div class="mb-3">
    <label class="form-label" for="age">Tuổi:</label>
    <input name="age" type="number" class="form-control" id="age" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>